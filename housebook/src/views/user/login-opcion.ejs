<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/login-opcion.css">
    
    <script src="/js-front/show-password.js"></script>
    <script src="/js-front/validation-login.js"></script>

    
    <title>Login</title>
</head>

<%- include("../partials/header") %> 

<body>
    
    <div class="container-sesion-register"> 

<div class="box-login">
    <div class="titulo-sesion">
        <h2>Iniciar sesion</h2>
    </div>
  <!--  <div class="forget-passwor">
        <a href="#" id="forgetPass">Recuperar contraseña</a>
    </div>  -->

    <div id="box-errors">
        <h3>Hubo errores</h3>
        <ul class="lista-errores">
            
        </ul>
    </div>

    <form action="/account/login" method="POST" class="form-login">
        <div class="block-form-sesion">
            <div class="error">
                <% if(typeof errorUser !== "undefined") { %>
                <span > Usuario Incorrecto </span>
                <% } %>
            </div>
            <input type="text" name="usuario" class="email" id="email" placeholder="Email">
            <div class="error">
                <% if(typeof errorPsw !== "undefined") { %>
                <span > Contraseña incorrecta </span>
                <% } %>
            </div>
            <input type="password" name="password" id="password" class="password" placeholder="Password">
        
        </div>


        
        <div class="casilla-sesion">
            <label for="view-password">
                <input type="checkbox"  name="view_password" id="view-password">
                <span> Mostrar Contraseña </span>
            </label>

        </div>
        <div class="casilla-sesion">
            <label for="remember">
                <input type="checkbox"  name="remember" id="remember">
                <span for=""> Recuerdame </span>
            </label>
        </div>
        <button class="iniciar-sesion" type="submit">Inciar sesion</button>

    </form>

</div>




</div>



<footer><%- include("../partials/footer") %> </footer>

</body>


